<% provide(:title, "Edit user") %>
<% provide(:button_text, '編集') %>
<h1>基本情報の更新</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@basic_info) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :specified_work_time, "指定勤務開始時間"%>
        <%= f.time_field :specified_work_time, class: 'form-control' %>

        <%= f.label :basic_work_time, "基本勤務時間"%>
        <%= f.time_field :basic_work_time, class: 'form-control' %>
        
        
 
        <%= f.submit "編集", class: "btn btn-primary" %>      

    <% end %>
  </div>
</div>